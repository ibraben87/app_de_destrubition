<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vendeur">

    <Button
        android:id="@+id/new_comande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="btn_new_comande"
        android:text="new comande"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.221" />

    <Button
        android:id="@+id/new_client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="new client"
        app:layout_constraintEnd_toEndOf="@+id/new_comande"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="@+id/new_comande"
        app:layout_constraintTop_toBottomOf="@+id/new_comande" />

    <Button
        android:id="@+id/valider_cammandes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="valider cammandes"
        app:layout_constraintEnd_toEndOf="@+id/new_client"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/new_client"
        app:layout_constraintTop_toBottomOf="@+id/new_client" />

</androidx.constraintlayout.widget.ConstraintLayout>