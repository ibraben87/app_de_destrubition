<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_nom_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="nom produit"
            android:textSize="18dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="108dp" />

        <TextView
            android:id="@+id/item_unite_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="unite carton"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/item_nom_produit"
            tools:layout_editor_absoluteX="112dp" />

        <TextView
            android:id="@+id/item_prix_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="52dp"
            android:text="prix"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@id/item_unite_produit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_nom_produit"
            app:layout_constraintVertical_bias="0.379" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="89dp"
            android:layout_height="67dp"
            app:srcCompat="@drawable/bien_remplir_une_fiche_produit"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>