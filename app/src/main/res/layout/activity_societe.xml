<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_ground"

    tools:context=".societe">
    <TextView
        android:id="@+id/page_societe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SOCIETE"
        android:textColor="#F3B0B8"
        android:textSize="55sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />






    <Button
        android:id="@+id/cosulter_commande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:backgroundTint="#bdd7e2"
        android:text="consulter commande"
        android:textColor="#1C1061"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/envoyer_commandes"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:textStyle="bold"

        android:backgroundTint="#C57791"
        android:text="envoyer les commandes"
        android:textColor="#bdd7e2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="580dp"
        tools:layout_editor_absoluteY="580dp"
        />

    <Button
        android:id="@+id/new_acount"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#bdd7e2"
        android:textStyle="bold"
        android:text="new acount"
        android:textColor="#1C1061"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="146dp"
        />

    <Button
        android:id="@+id/liste_produit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#bdd7e2"
        android:text="liste des produits"
        android:textColor="#1C1061"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="322dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/liste_clients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#bdd7e2"
        android:text="liste des clients"
        android:textColor="#1C1061"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="322dp"
        />

    <Button
        android:id="@+id/liste_vendeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#bdd7e2"
        android:text="liste des vendeur"
        android:textColor="#1C1061"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="415dp"
        />

    <Button
        android:id="@+id/liste_livreur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:backgroundTint="#bdd7e2"
        android:text="liste des livreur"
        android:textColor="#1C1061"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.935"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="415dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>