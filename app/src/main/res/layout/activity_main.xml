<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/livreur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="Livreur"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="150dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/vendeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vendeur"
        app:layout_constraintStart_toStartOf="@+id/livreur"
        app:layout_constraintTop_toBottomOf="@id/livreur"
        android:layout_marginTop="50dp"/>
    <Button
        android:id="@+id/societe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/societe"
        app:layout_constraintStart_toStartOf="@id/livreur"
        app:layout_constraintTop_toBottomOf="@id/vendeur"
        android:layout_marginTop="50dp"
        style="?attr/materialButtonOutlinedStyle"
        />
</androidx.constraintlayout.widget.ConstraintLayout>