<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_image_produit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/item_nom_produit"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_image_produit"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:text="nom produit"
        android:textSize="18dp"
        android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/item_unite_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="unite carton"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@id/item_image_produit"
            app:layout_constraintTop_toBottomOf="@id/item_nom_produit"
            android:layout_marginTop="15dp"
            android:layout_marginStart="12dp"/>
        <TextView
            android:id="@+id/item_prix_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prix"
            android:textSize="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/item_nom_produit"
            app:layout_constraintBottom_toBottomOf="@id/item_unite_produit"
            android:layout_marginEnd="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>