<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".consulter_commandes"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rechreche"
        android:layout_width="match_parent"
        android:layout_height="200dp"
    >
        <TextView
            android:id="@+id/text_date_debut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            android:text="date debut :"/>
        <EditText
            android:id="@+id/date_debut"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@id/text_date_debut"
            app:layout_constraintTop_toTopOf="@id/text_date_debut"
            android:layout_marginStart="5dp"
             />

        <TextView
            android:id="@+id/text_date_fin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/date_debut"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:text="date fin :"/>

        <EditText
            android:id="@+id/date_fin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            app:layout_constraintStart_toEndOf="@id/text_date_fin"
            app:layout_constraintTop_toTopOf="@id/text_date_fin"
            android:layout_marginStart="5dp"
            />
        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_de_consulter_les_commandes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>